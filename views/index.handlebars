<div class="row" id="main-row">
    <div class="col-md-1"></div>
    <div class="col-md-4">
        <h2> Devour those Burgers</h2>

        <table>
            {{#each burgers}}
            {{#unless devoured}}
            <tr>
                <td> {{burger_name}}</td>
                <td> <button class="devour-btn btn-primary btn" data-id="{{id}}" data-isdevoured="{{devoured}}">
                        Devour!!</button>
                    </li>
                    {{/unless}}
            </tr>
            {{/each}}
        </table>
    </div>

    <div class="col-md-2">
    </div>
    <div class="col-md-4">
        <h2>Already Devoured</h2>
        <table>
            {{#each burgers}}
            {{#if devoured}}
            <tr>
                <td class="strikethrough"> {{burger_name}}</td>
                <td>
                    <button class="remove-btn btn-outline btn" data-id="{{id}}" data-isdevoured="{{devoured}}">
                        <i class="fas fa-trash-alt"></i></button>
                    </li>
                    {{/if}}
            </tr>
            {{/each}}
        </table>
    </div>
    <div class="col-md-1"></div>
</div>

<div class="row mt-5">
    <div class="col-md-4 text-right">
        <h3 class="mt-2">Add a Burger :</h3>
    </div>
    <div class="col-md-6 text-left">
        <input type="text" id="burger_name" name="name" class="h-100 w-75" />
        <button id="add-burger"class="btn btn-success mb-2 h-100" > Submit</button>
    </div>
    <div class="col-md-2"></div>

</div>